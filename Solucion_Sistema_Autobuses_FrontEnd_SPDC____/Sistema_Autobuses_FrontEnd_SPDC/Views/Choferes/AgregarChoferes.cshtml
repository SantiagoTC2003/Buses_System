@{
    ViewData["Title"] = "Agregar Choferes";
}

<h1 style="margin-top:40px;">Agregar Choferes</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearChofer" asp-controller="Choferes" method="post">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label asp-for="Unidades_asignadas" class="control-label"></label>
                <input asp-for="Unidades_asignadas" class="form-control" />
                <span asp-validation-for="Unidades_asignadas" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-bottom:40px;">
    <a asp-action="Index" asp-controller="Choferes">Regresar al Listado de Choferes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

