@{
    ViewData["Title"] = "Inicio de Sesion";
}
<h1 style="margin-top:40px;">Inicio de Sesion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IniciarSesion" asp-controller="Autenticacion" method="post">
            <div style="margin-top:10px;" class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" id="txtUsuario" placeholder="ejemplo: Maria Perez" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div style="margin-top:20px;" class="form-group">
                <label asp-for="Contrasena" class="control-label"></label>
                <input type="password" asp-for="Contrasena" class="form-control" id="txtClave" placeholder="Digite una clave segura" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
            <div style="margin-top:20px;" class="form-group">
                <label asp-for="Rol" class="control-label"></label>
                <input asp-for="Rol" class="form-control" id="txtRol" placeholder="ingrese su rol" />
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <div style="margin-top:40px;" class="form-group">
                <input type="submit" value="Iniciar Sesion" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>