@{
    ViewData["Title"] = "Agregar Paradas";
}
<h1 style="margin-top:40px;">Agregar Paradas</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearParada" asp-controller="Paradas" method="post">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label asp-for="Ruta_id" class="control-label"></label>
                <input asp-for="Ruta_id" class="form-control" />
                <span asp-validation-for="Ruta_id" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label asp-for="Orden" class="control-label"></label>
                <input asp-for="Orden" class="form-control" />
                <span asp-validation-for="Orden" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-bottom:40px;">
    <a asp-action="Index">Regresar al Listado de Paradas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
