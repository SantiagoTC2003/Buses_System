@{
    ViewData["Title"] = "Mantenimiento de Paradas";
}
<h1 style="margin-top:40px;">Paradas</h1>

<p>
    <a asp-action="AgregarParadas" asp-controller="Paradas">Registrar Parada</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ruta_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orden)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ruta_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Orden)
                </td>
                <td>
                    @Html.ActionLink("Editar", "ModificarParadas", new { Id = item.Id }) |
                    @Html.ActionLink("Eliminar", "EliminarParada", new { Id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
